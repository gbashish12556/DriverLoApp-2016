<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.driverlo.www.driverlo_customer.Fragments.RideDetails"
    android:padding="5dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/horizontal_LL.open">

            <LinearLayout
                style="@style/vertical_LL">

                <LinearLayout
                    style="@style/horizontal_LL.open"
                    android:background="@color/pure_white"
                    android:padding="10dp">

                    <LinearLayout
                        style="@style/vertical_LL">

                        <TextView
                            android:gravity="top"
                            android:textSize="25dp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ride_detail"
                            android:padding="15dp"
                            android:layout_gravity="center_horizontal" />

                        <LinearLayout
                            style="@style/horizontal_LL.open"
                            android:id="@+id/pickup_location_container"
                            android:padding="@dimen/text_detail_padding">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/red_dot"
                                android:paddingTop="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="20dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/semi_medium_text_size"
                                android:id="@+id/pickup_location"
                                android:text="Salkia, Howrah">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            style="@style/horizontal_LL.open"
                            android:id="@+id/dropoff_location_container"
                            android:padding="@dimen/text_detail_padding"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/green_dot"
                                android:paddingTop="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="20dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/semi_medium_text_size"
                                android:id="@+id/dropoff_location"
                                android:text="Saltlake, Kolkata">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            style="@style/horizontal_LL.open"
                            android:padding="@dimen/text_detail_padding">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_calender"
                                android:layout_gravity="top"
                                android:paddingRight="10dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/semi_medium_text_size"
                                android:id="@+id/booking_datetime"
                                android:text="15/11/2016 06:30 pm">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            style="@style/horizontal_LL.open"
                            android:padding="@dimen/text_detail_padding">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_booking_status"
                                android:layout_gravity="top"
                                android:paddingRight="10dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/semi_medium_text_size"
                                android:id="@+id/estimated_time"
                                android:text="5 Hour 10 minute">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            style="@style/horizontal_LL.open"
                            android:padding="@dimen/text_detail_padding">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_car"
                                android:layout_gravity="top"
                                android:paddingRight="10dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/semi_medium_text_size"
                                android:id="@+id/vehicle_type"
                                android:text="Manual-Suv">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            style="@style/horizontal_LL.open"
                            android:padding="@dimen/text_detail_padding">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_gift_coupon"
                                android:layout_gravity="top"
                                android:paddingRight="10dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/semi_medium_text_size"
                                android:id="@+id/coupon_code"
                                android:text="DL50">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View

                    android:layout_width="fill_parent"
                    android:layout_height="4dp"
                    android:background="@color/LightGrey"/>

                <LinearLayout
                    style="@style/horizontal_LL.open"
                    android:padding="10dp"
                    android:background="@color/pure_white"
                    android:id="@+id/driver_detail_container"
                    android:visibility="gone">

                    <LinearLayout
                        style="@style/vertical_LL">
                        <TextView
                            android:gravity="top"
                            android:textSize="25dp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/driver_detail"
                            android:padding="15dp"
                            android:layout_gravity="center_horizontal" />

                        <LinearLayout
                            style="@style/horizontal_LL.open"
                            android:id="@+id/driver_name_container"
                            android:padding="@dimen/text_detail_padding">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_driver"
                                android:layout_gravity="top"
                                android:paddingRight="10dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/semi_medium_text_size"
                                android:id="@+id/driver_name"
                                android:text="Salkia, Howrah">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            style="@style/horizontal_LL.open"
                            android:id="@+id/license_no_container"
                            android:padding="@dimen/text_detail_padding">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_license"
                                android:layout_gravity="top"
                                android:paddingRight="10dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/semi_medium_text_size"
                                android:id="@+id/license_no"
                                android:text="Saltlake, Kolkata">

                            </TextView>

                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:padding="@dimen/text_detail_padding"
                            android:layout_height="4dp"
                            android:background="@color/LightGrey"/>

                        <LinearLayout
                            style="@style/horizontal_LL.open"
                            android:visibility="gone"
                            android:id="@+id/rating_bar_container"
                            android:padding="@dimen/heading_padding">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_weight="2"
                                android:id="@+id/rating_text"
                                android:text="Plase Rate: "/>

                            <RatingBar
                                android:layout_height="match_parent"
                                android:id="@+id/rating_bar"
                                android:layout_width="wrap_content"
                                android:layout_weight="0.18" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    style="@style/horizontal_LL.open"
                    android:id="@+id/approval_status_container"
                    android:background="@color/pure_white">

                    <LinearLayout
                        style="@style/vertical_LL" >

                        <TextView
                            style="@style/horizontal_LL.open"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="@dimen/large_text_size"
                            android:padding="20dp"
                            android:id="@+id/approval_status"
                            android:text="Approval Pending" />

                        <LinearLayout
                            style="@style/horizontal_LL.open"
                            android:id="@+id/cancel_button_container"
                            android:padding="10dp" >

                            <Button
                                style="@style/full_screen_button"
                                android:id="@+id/cancel_button"
                                android:text="Cancel" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>