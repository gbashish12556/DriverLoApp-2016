<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="120dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@color/pure_white">

        <LinearLayout
            style="@style/horizontal_LL.sm.2">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/semi_medium_text_size"
                android:id="@+id/brn_no"
                android:text="BRN13948275638"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="@dimen/semi_medium_text_size"
                android:id="@+id/booking_datetime"
                android:text="12/11/2016 5:30 pm"/>

        </LinearLayout>

        <LinearLayout
             style="@style/horizontal_LL.sm.2">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_height="wrap_content"
                android:textSize="@dimen/semi_medium_text_size"
                android:id="@+id/journey_type"
                android:text="Roundtrip"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="@dimen/semi_medium_text_size"
                android:id="@+id/vehicle_type"
                android:text="Suv-Manual"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:textSize="@dimen/semi_medium_text_size"
                android:id="@+id/booking_status"
                android:text="Completed"/>

        </LinearLayout>

        <LinearLayout
            style="@style/horizontal_LL.sm.1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/red_dot"
                android:textSize="@dimen/small_text_size"
                android:id="@+id/pickup_point"
                android:text="Salkia, Howrah, Westbengal-711202"/>

        </LinearLayout>

</LinearLayout>
